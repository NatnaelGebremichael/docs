{
  "builds": [
    {
      "src": "mkdocs.yml",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/site/$1"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && mkdocs build",
  "outputDirectory": "site"
}